    <td width="50%"><div id="teamSizeTrend"></div></td>
		</tr>
		
		<tr>
		<td width="100%" colspan="2"><div id="openDefectsTrend"></div>

    </td>		
		</tr>

		<tr>
		<td width="50%"><div id="testsTrend"></div></td>
