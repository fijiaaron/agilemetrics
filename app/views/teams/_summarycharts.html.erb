		<%= render :partial => "chartdeftests", :locals => { :last_sprints => last_sprints } %>
		<%= render :partial => "chartdefcoverage", :locals => { :last_sprints => last_sprints } %>

      }
      google.setOnLoadCallback(drawVisualization);
    </script>
	<table width="100%">
