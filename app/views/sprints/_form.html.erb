<%= form_for([@sprint.team, @sprint]) do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this sprint from being saved:</h2>

      <ul>
      <% @team.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<h2>Sprint Info</h2>

  <div class="field">
    <%= f.label :sprint_name %>
    <%= f.text_field :sprint_name %>
	Tip: Use format yyyy.mm.dd for easy sorting
  </div>
  <div class="field">
    <%= f.label :end_date %>
    <%= f.text_field :end_date %>
	format: yyyy-mm-dd
  </div>
  <div class="field">
    <%= f.label :team_size %>
    <%= f.text_field :team_size %>
  </div>
  <div class="field">
    <%= f.label :working_days %>
    <%= f.text_field :working_days %>
  </div>
  <div class="field">
    <%= f.label :pto_days %>
    <%= f.text_field :pto_days %>
  </div>

	<h2>Actuals</h2>

  <div class="field">
    <%= f.label :planned_velocity %>
    <%= f.text_field :planned_velocity %>
  </div>
  <div class="field">
    <%= f.label :actual_velocity %>
    <%= f.text_field :actual_velocity %>
  </div>
  <div class="field">
    <%= f.label :adopted_points %>
    <%= f.text_field :adopted_points %>
  </div>
  <div class="field">
    <%= f.label :unplanned_points %>
    <%= f.text_field :unplanned_points %>
  </div>
  <div class="field">
    <%= f.label :found_points %>
    <%= f.text_field :found_points %>
  </div>
  <div class="field">
    <%= f.label :partial_points %>
    <%= f.text_field :partial_points %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => 'button large green' %>
  </div>
<% end %>
